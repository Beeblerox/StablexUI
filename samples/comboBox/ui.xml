<?xml version="1.0" encoding="UTF-8"?>

<Widget id="'root'" w="$Lib.current.stage.stageWidth / 2" h="$Lib.current.stage.stageHeight / 2">
    <Floating id="'float'" widthPt="90" heightPt="90" rightPt="5" bottomPt="5" skin:Paint-border="8" skin:Paint-color="0x005d00">
        <Button text="'hide'" top="100" left="100" skin:Paint-color="0xAAAAAA" on-click="#Floating(float).hide();"/>
    </Floating>

    <VBox skin:Paint-color="0x222222" left="40" top="40">
        <Button text="'show'"  skin:Paint-color="0xAAAAAA" on-click="#Floating(float).show();"/>
    </VBox>
</Widget>

