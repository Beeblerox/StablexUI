<?xml version="1.0" encoding="UTF-8"?>

<Box id="'root'" w="800" h="600">
    <!-- drop-down -->
    <Options
        w = "100"
        h = "30"
        skin:Paint-color   = "0xFF0000"
        skin:Paint-corners = "[20]"

        options = "[['lion 1', 1], ['camel 2', 2], ['option 3', 3]]"

        box-skin:Paint-color = "0x222222"
        box-skin:Paint-alpha = "0.9"
        box-padding = "5"
        box-childPadding = "5"

        skinOption:Paint-color = "0x00FF00"
        skinSelected:Paint-color = "0x007700"
    />

    <!-- fullscreen list -->
    <HBox childPadding="10">
        <Text text="'Full screen list:'" />
        <Options
            w = "100"
            h = "30"
            skin:Paint-color   = "0xFF0000"
            skin:Paint-corners = "[20]"

            options = "[['fullscreen 1', 'wow'], ['fullscreen 2', 'yay'], ['fullscreen 3', 'doh']]"

            list-skin:Paint-color = "0x000000"
            list-skin:Paint-alpha = "0.7"
            list-widthPt="100"
            list-heightPt="100"

            alignList="false"

            box-skin:Paint-color = "0x222222"
            box-padding = "5"
            box-childPadding = "5"

            skinOption:Paint-color = "0x00FF00"
            skinSelected:Paint-color = "0x007700"
        />
    </HBox>

</Box>

