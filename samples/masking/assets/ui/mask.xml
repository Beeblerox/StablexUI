<?xml version="1.0" encoding="UTF-8"?>

<!-- Root element of our UI. We can use Main in markup since it extends ru.stablex.ui.widgets.Widget -->
<Main
    id   = "'root'"
    x    = "10"
    y    = "10"
    w    = "$Lib.current.stage.stageWidth - 20"
    h    = "$Lib.current.stage.stageHeight - 20"
    skin:Slice9-src   = "'assets/img/winxp.png'"
    skin:Slice9-slice = "[5, 10, 32, 48]"
>
    <Widget top="100" left="300" w="400" h="400" skin:Paint-border="2" skin:Paint-color="0xffffff" on-click="
        #panel.tween(0.5, {top:#mask.mouseY - #panel.h / 2, left:#mask.mouseX - #panel.w / 2});
    ">
        <Widget id="'mask'" widthPt="100" heightPt="100" overflow="false">
            <Widget id="'panel'" skin:Paint-color="0xffff0c" w="300" h="300" left="-50" top="-50" skin:Tile-border="4" />
        </Widget>
    </Widget>

</Main>
