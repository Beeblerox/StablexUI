<?xml version="1.0" encoding="UTF-8"?>

<!-- Root element of our UI. We can use Main in markup since it extends ru.stablex.ui.widgets.Widget -->
<Main
    id   = "'root'"
    x    = "10"
    y    = "10"
    w    = "$Lib.current.stage.stageWidth - 20"
    h    = "$Lib.current.stage.stageHeight - 20"
    skin = "'winxp'"
>
    <Panel top="100" left="300" w="400" h="400" border="2" bgColor="0xffffff" on-click="
        #panel.tween(0.5, {top:#mask.mouseY - #panel.h / 2, left:#mask.mouseX - #panel.w / 2});
    ">
        <Mask id="'mask'" widthPt="100" heightPt="100">
            <Panel id="'panel'" texture="'assets/img/nme.png'" w="300" h="300" left="-50" top="-50" border="4" />
        </Mask>
    </Panel>

</Main>
